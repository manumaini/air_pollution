<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/drawable_shape2">


    <TextView
        android:fontFamily="@font/font1"
        android:textStyle="bold"
        android:id="@+id/sensor_name"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        android:text="default"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignBottom="@id/sensor_name"
        android:layout_toRightOf="@id/sensor_name"
        android:id="@+id/sensor_id"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="default"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/sensor_id"
        android:id="@+id/sensor_threshold"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>