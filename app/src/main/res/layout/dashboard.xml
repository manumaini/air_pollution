<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">





    <TextView
        android:layout_below="@id/rv"
        android:id="@+id/dashboard_text"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:fontFamily="@font/font4"
        android:textColor="@color/lightgreydark"
        android:text="Dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_dashboard2"
        android:id="@+id/rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <GridLayout
        android:layout_below="@id/dashboard_text"
        android:id="@+id/gl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_washfold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="12dp"
            app:cardCornerRadius="15dp">


            <RelativeLayout
                android:background="@color/backgrey"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/total_sensor"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40dp"
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/total_sensor"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:fontFamily="@font/font3"
                    android:textColor="@color/white"
                    android:text="Total Sensor"
                    android:id="@+id/sensortext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:padding="16dp"
                    android:layout_below="@id/sensortext"
                    android:src="@drawable/ic_tower"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_washiron"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="12dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:background="@color/backgrey"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/sensor_online"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40dp"
                    android:text="16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/sensor_online"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:fontFamily="@font/font3"
                    android:textColor="@color/white"
                    android:text="Sensor Online"
                    android:id="@+id/snesoronline_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:padding="16dp"
                    android:layout_below="@id/snesoronline_text"
                    android:src="@drawable/ic_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </RelativeLayout>




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_expresslaundry"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="12dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:background="@color/backgrey"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/sensor_offline"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40dp"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/sensor_offline"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:fontFamily="@font/font3"
                    android:textColor="@color/white"
                    android:text="Sensor offline"
                    android:id="@+id/sensortext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:padding="16dp"
                    android:layout_below="@id/sensortext2"
                    android:src="@drawable/ic_phone_offline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_dryclean"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="12dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:background="@color/backgrey"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/alert"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40dp"
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/alert"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:fontFamily="@font/font3"
                    android:textColor="@color/white"
                    android:text="AMC Expired"
                    android:id="@+id/alerttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:padding="16dp"
                    android:layout_below="@id/alerttext"
                    android:src="@drawable/ic_alert"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>



        </androidx.cardview.widget.CardView>






    </GridLayout>

    <RelativeLayout
        android:id="@+id/black_layout"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_centerInParent="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit2"
        style="@style/SpinKitView.Large.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorAccent" />
</RelativeLayout>